<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../public/css/transport.css">
    <title>Viajes</title>
</head>
<body>
    <div class="title">
        <h2>Viajes</h2>
    </div>
    <div class="table_content">
        <button onClick="window.location.reload();">Actualizar Lista</button>
        <table id="viajes">
            <tr>
                <th>Check</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Habitacion</th>
                <th>Nro. Huespedes</th>
                <th>Desde</th>
            </tr>
            <% if (rows.length) { %>
            <%  rows.forEach(function(data) { %>
            <tr>
                <td> <%= data.check_ %> </td>
                <td> <%= data.fecha %> </td>
                <td> <%= data.hora %> </td>
                <td> <%= data.nro_habitacion %> </td>
                <td> <%= data.nro_personas %> </td>
                <td> <%= data.origen %> </td>
            </tr>
            <%  }); %>
            <% } else { %>
                <tr>
                    <td>No hay viajes</td>
                </tr>
            <% } %>
        </table>
    </div>
</body>
</html>